{
  "name": "api-node",
  "version": "0.0.1",
  "description": "The Directus API in Node.js",
  "main": "dist/server.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/server.js",
    "build": "rimraf dist && tsc -b && copyfiles \"src/**/*.*\" -e \"src/**/*.ts\" -u 1 dist",
    "dev": "LOG_LEVEL=trace ts-node-dev src/server.ts --clear --watch \"src/**/*.ts\" --rs --transpile-only | pino-colada"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/directus/api-node.git"
  },
  "keywords": [
    "directus",
    "api",
    "headless",
    "database",
    "cms",
    "dam",
    "crm"
  ],
  "author": "Rijk van Zanten <rijkvanzanten@me.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/directus/api-node/issues"
  },
  "homepage": "https://github.com/directus/api-node#readme",
  "devDependencies": {
    "@types/atob": "^2.1.2",
    "@types/busboy": "^0.2.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-session": "^1.17.0",
    "@types/hapi__joi": "^17.1.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.157",
    "@types/ms": "^0.7.31",
    "@types/nodemailer": "^6.4.0",
    "@types/pino": "^6.3.0",
    "@types/sharp": "^0.25.0",
    "@types/uuid": "^8.0.0",
    "@types/uuid-validate": "0.0.1",
    "copyfiles": "^2.3.0",
    "eslint": "^7.4.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "pino-colada": "^2.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.6"
  },
